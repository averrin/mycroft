[
    {
        "name": "health-monitoring",
        "url": "git@git.developonbox.ru:js-charter/health-monitoring.git",
        "branch": "master",
        "build_steps": [
            {
                "name": "npm_update",
                "description": "Update NPM packages",
                "cmd": "npm update"
            },
            {
                "name": "bower_update",
                "description": "Update Bower packages",
                "cmd": "bower update"
            },
            {
                "name": "tests",
                "description": "Run tests",
                "cmd": "./node_modules/gulp/bin/gulp.js test",
                "stop_on_fail": true
            },
            {
                "name": "build",
                "description": "Build project",
                "cmd": "./node_modules/gulp/bin/gulp.js build",
                "stop_on_fail": true
            },
            {
                "name": "deploy",
                "description": "Deploy",
                "cmd": "cp -rv out/* /var/www/charter/health-monitoring/"
            }
        ],
        "watchers": [
            "alexey.nabrodov@dev.zodiac.tv"
        ],
        "fail_watchers": []
    }
]
