[
    {
        "name": "health-monitoring",
        "url": "git@git.developonbox.ru:js-charter/health-monitoring.git",
        "web_url": "http://lets.developonbox.ru/charter/health-monitoring/",
        "branch": "master",
        "build_steps": [
            {
                "name": "npm_update",
                "description": "Update NPM packages",
                "cmd": "npm update"
            },
            {
                "name": "bower_update",
                "description": "Update Bower packages",
                "cmd": "bower update"
            },
            {
                "name": "tests",
                "description": "Run tests",
                "cmd": "./node_modules/gulp/bin/gulp.js test",
                "stop_on_fail": true
            },
            {
                "name": "build",
                "description": "Build project",
                "cmd": "./node_modules/gulp/bin/gulp.js build",
                "stop_on_fail": true
            },
            {
                "name": "deploy",
                "description": "Deploy",
                "cmd": "cp -rv out/* /var/www/charter/health-monitoring/",
                "stop_on_fail": true
            },
            {
                "name": "pack",
                "description": "Packing artefacts",
                "cmd": "echo $run_id > out/build.txt; tar cvzf $tgz_name out/*"
            }
        ],
        "watchers": [
            "alexey.nabrodov@dev.zodiac.tv"
        ],
        "fail_watchers": []
    },

    {
        "name": "easel",
        "url": "git@git.developonbox.ru:sergey.kolchenko/easel.git",
        "web_url": "http://lets.developonbox.ru/alexey.nabrodov/easel/",
        "branch": "master",
        "build_steps": [
            {
                "name": "npm_update",
                "description": "Update NPM packages",
                "cmd": "npm install"
            },
            {
                "name": "deps",
                "description": "Install dependencies",
                "cmd": "./node_modules/.bin/gulp deps",
                "stop_on_fail": true
            },
            {
                "name": "build",
                "description": "Building project",
                "cmd": "./node_modules/.bin/gulp build",
                "stop_on_fail": true
            },
            {
                "name": "bundle",
                "description": "Bundling project",
                "cmd": "./node_modules/.bin/gulp bundle",
                "stop_on_fail": true
            },
            {
                "name": "clean",
                "description": "Cleaning",
                "cmd": "./node_modules/.bin/gulp clean"
            },
            {
                "name": "deploy",
                "description": "Deploy",
                "cmd": "cp -rv out/* /var/www/alexey.nabrodov/easel/",
                "stop_on_fail": true
            },
            {
                "name": "pack",
                "description": "Packing artefacts",
                "cmd": "echo $run_id > out/build.txt; tar cvzf $tgz_name out/*"
            }
        ],
        "watchers": [
            "alexey.nabrodov@dev.zodiac.tv"
        ],
        "fail_watchers": []
    }
]
